#! /bin/bash -l

# Shell script to set the environment variables for the SGA2025
# project.

export COSMO=/dvs_ro/cfs/cdirs/cosmo

export LARGEGALAXIES_CAT=/dvs_ro/cfs/cdirs/desi/users/ioannis/SGA/2025/SGA2025-v0.11-refcat.kd.fits

export SGA_CODE_DIR=/global/homes/i/ioannis/code/SGA
export LEGACYPIPE_CODE_DIR=/global/common/software/desi/users/ioannis/legacypipe
export PYTHONPATH=$SGA_CODE_DIR/py:$LEGACYPIPE_CODE_DIR/py:$PYTHONPATH
export PATH=$SGA_CODE_DIR/bin/SGA2025:$PATH

export SGA_DIR=/global/cfs/cdirs/desicollab/users/ioannis/SGA/2025
export SGA_DATA_DIR=$PSCRATCH/SGA2025-data
export SGA_HTML_DIR=/pscratch/sd/i/ioannis/SGA2025-html
#export SGA_DATA_DIR=/global/cfs/cdirs/desicollab/users/ioannis/SGA2025-data
#export SGA_HTML_DIR=/global/cfs/cdirs/cosmo/www/temp/ioannis/SGA2025-html

export LEGACY_SURVEY_BASEDIR=$COSMO/work/legacysurvey
#export LEGACY_SURVEY_DIR=$COSMO/work/legacysurvey/dr9
#export SKY_TEMPLATE_DIR=$COSMO/data/legacysurvey/dr9/calib/sky_pattern
export SKY_TEMPLATE_DIR=$COSMO/work/legacysurvey/dr11/calib/sky_pattern
#export LARGEGALAXIES_CAT=$COSMO/staging/largegalaxies/v3.0/SGA-parent-v3.0.kd.fits
#echo "LARGEGALAXIES_CAT="$LARGEGALAXIES_CAT

export GAIA_CAT_DIR=$COSMO/data/gaia/dr3/healpix
export GAIA_CAT_PREFIX=healpix
export GAIA_CAT_SCHEME=nested
export GAIA_CAT_VER=3

export UNWISE_COADDS_DIR=$COSMO/work/wise/outputs/merge/neo9/fulldepth:$COSMO/data/unwise/allwise/unwise-coadds/fulldepth
#export UNWISE_MODEL_SKY_DIR=$COSMO/work/wise/unwise_catalog/dr3/mod

export TYCHO2_KD_DIR=$COSMO/staging/tycho2
export PS1CAT_DIR=$COSMO/work/ps1/cats/chunks-qz-star-v3
export DUST_DIR=$COSMO/data/dust/v0_1
export GALEX_DIR=$COSMO/data/galex/images

export PYTHONNOUSERSITE=1
export OMP_NUM_THREADS=1
export MKL_NUM_THREADS=1
export MPICH_GNI_FORK_MODE=FULLCOPY

# Config directory nonsense
export TMPCACHE=$(mktemp -d)
mkdir $TMPCACHE/cache
mkdir $TMPCACHE/config

export XDG_CACHE_HOME=$TMPCACHE/cache
export XDG_CONFIG_HOME=$TMPCACHE/config
mkdir $XDG_CACHE_HOME/astropy
mkdir $XDG_CONFIG_HOME/astropy
cp -r /global/homes/i/ioannis/.astropy/cache $XDG_CACHE_HOME/astropy
cp -r /global/homes/i/ioannis/.astropy/config $XDG_CONFIG_HOME/astropy

export MPLCONFIGDIR=$TMPCACHE/matplotlib
mkdir $MPLCONFIGDIR
cp -r /global/homes/i/ioannis/.cache/matplotlib $MPLCONFIGDIR

# cuda/cupy
# https://github.com/dmargala/desiscaleflow/blob/main/bin/desi_avoid_home
# https://developer.nvidia.com/blog/cuda-pro-tip-understand-fat-binaries-jit-caching/
# https://docs.nvidia.com/cuda/cuda-c-programming-guide/index.html#env-vars
export CUDA_CACHE_PATH=$TMPCACHE/.nv/ComputeCache
mkdir -p $CUDA_CACHE_PATH

# # undocumented, see https://github.com/cupy/cupy/issues/3887
# export CUPY_CUDA_LIB_PATH=$SCRATCH/cupy/cuda_lib
# https://docs.cupy.dev/en/stable/reference/environment.html#envvar-CUPY_CACHE_DIR
export CUPY_CACHE_DIR=$TMPCACHE/.cupy/kernel_cache
mkdir -p $CUPY_CACHE_DIR
